<h2>Post feed:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button></a>

{{#each posts}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <small>Date: {{date}}</small><br>
            <small>Category: {{category.name}}</small><br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Edit post</button></a><br>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-2">Delete post</button></a>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">No posts found</h3>
{{/each}}